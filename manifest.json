{
  "manifest_version": 3,
  "name": "Phishing Shield",
  "version": "1.0",
  "description": "A real-time phishing detection tool to keep you safe.",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/safe_16.png",
      "48": "icons/safe_48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/safe_16.png",
    "48": "icons/safe_48.png",
    "128": "icons/safe_128.png"
  }
}
